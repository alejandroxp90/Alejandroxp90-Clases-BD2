/**CREACION DE TABLA**/

DROP TABLE NOTAS;

CREATE TABLE "NOTAS" (
    "NOTA_ID"         NUMBER NOT NULL ENABLE,
    "NOMBRE"  VARCHAR(25),
    "EDAD" NUMBER,
    CONSTRAINT "NOTAS_PK" PRIMARY KEY ("NOTA_ID"));

/**CREACION DE PROCEDIMIENTO**/
/* ESTE PROCEDIMIENTO INSERTA EN LA EDAD NUMEROS ALEATORIOS ENTRE LOS INTERVALOS EXIGIDOS*/
/* NO ENCONTRE LA FORMA DE COLOCAR EL NOMBRE EN LA TABLA SIN AFECTAR EL RANDOM*/

CREATE OR REPLACE PROCEDURE INSERTA_NOTAS AS
BEGIN
  FOR i IN 1..300 LOOP
      INSERT INTO NOTAS (NOTA_ID,EDAD)
      SELECT (SELECT NVL(MAX(NOTA_ID),0)+1 FROM NOTAS),
              trunc(ABS(dbms_random.value(30,18)),0)
            
        FROM  dual;
   END LOOP;
 COMMIT;
END INSERTA_NOTAS;

/* LLAMADA DEL PROCEDIMIENTO */
BEGIN
  INSERTA_NOTAS();
END;

/* AQUI SE MUESTRA LA TABLA */

SELECT * FROM NOTAS;
