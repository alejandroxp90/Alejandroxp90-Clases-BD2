CREATE TABLE PELICULA(ID_PELICULA INTEGER, TITULO VARCHAR2(120), DIRECTOR VARCHAR2(120),SINOPSIS VARCHAR2(255),CONSTRAINT PK_ID_PELICULA PRIMARY KEY(ID_PELICULA));

CREATE TABLE HORARIO(ID_HORARIO INTEGER,ID_PELICULA INTEGER, FECHA DATE, CONSTRAINT PK_ID_HORARIO PRIMARY KEY(ID_HORARIO),CONSTRAINT FK1_ID_PELICULA FOREIGN KEY(ID_PELICULA)REFERENCES PELICULA(ID_PELICULA));

/*GENERAMOS LA SECUENCIA CORRESPONDIENTE A LA TABLA PELICULA COMO NOTA ADICIONAL TODAS LAS TABLAS QUE TENGAS PK DEBEN TENER UNA SECUENCIA*/

CREATE SEQUENCE SECUENCIA_PELICULA
START WITH 1
INCREMENT BY 1
NOMAXVALUE;


CREATE TABLE SALA(ID_SALA INTEGER, ID_PELICULA INTEGER, ID_HORARIO INTEGER, NUM_ASIENTO INTEGER, CONSTRAINT PK_ID_SALA PRIMARY KEY(ID_SALA), CONSTRAINT FK2_ID_PELICULA FOREIGN KEY(ID_PELICULA) REFERENCES PELICULA(ID_PELICULA), CONSTRAINT FK3_ID_HORARIO FOREIGN KEY(ID_HORARIO) REFERENCE HORARIO(ID_HORARIO));
